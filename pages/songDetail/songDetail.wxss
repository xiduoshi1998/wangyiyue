/* pages/village/village.wxss */
.songDetailContainer{
  display: flex;
 flex-direction: column;
align-items: center;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
}
.author{
  color: #ccc;
  margin-top:20rpx ;
  font-size: 24rpx;

}

.circle{
  position: relative;
  z-index: 100;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 10rpx 0;
  background-color: #ffffff;
}
/* 摇杆 */
.needle{
  position: relative;
  top: -44rpx;
  z-index: 99;
  left: 60rpx;
  width: 190rpx;
  height: 274rpx;
  transform-origin:40rpx 0 ;
  transform: rotate(-25deg);
  transition:transform 1s ;
}
.needleRotate{
  transform: rotate(0deg);
}
/* 磁盘 */
.discContainer{
  position: relative;
  top: -170rpx;
  width: 598rpx;
  height: 598rpx;
}
/* 磁盘动画 */
.discAnimation{
  animation: disc 4s linear infinite;
  animation-delay: 1s;
}
@keyframes disc {
from{
  transform:rotate(0deg)
}
to{
 transform:rotate( 360deg);
}
}
.disc{
  width: 598rpx;
  height: 598rpx;
}
.musicImage{
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  height: 370rpx;
  width: 370rpx;
  border-radius: 50%;
}
/* 进度条 */
.progressControl{
  position: absolute;
  display: flex;
  bottom: 160rpx;
  width: 640rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.progressControl .barControl{
  position: relative;
  width: 450rpx;
  height: 4rpx;
  margin: auto;
  background-color: rgba(0, 0, 0, .4);
}
/* 实时进度条 */
.audioCurrenTime{
  position: absolute;
  top: 0;
 left: 0;
 z-index: 3;
 width: 0rpx;
  height: 4rpx;
 background-color: red;
}
.audioCircle{
  position: absolute;
  top:-4rpx;
  right: -12rpx;
 height: 12rpx;
 width: 12rpx;
 border-radius: 50%;
 background-color: #fff;

}

/* 底部按键控制 */
.bottomControl{
  position: absolute;
  display: flex;
  bottom: 40rpx;
  left: 0;
  border-top:2rpx solid #ccc ;
  width: 100%;
}
.bottomControl text{
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top:30rpx ;
  text-align: center;
  color: #fff;
  font-size: 40rpx;
}

/* 歌单列表 */
.musiclist{
  position: absolute;
  z-index: 5;
  right: 0;
  left: 0;
  bottom: 0rpx;
  width: 95%;
  height: 800rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
}
.block{
  display: block;
}
.none{
  display: none;
}

.musiclist{
 padding: 20rpx;
}
.songList{
  height: 700rpx;
}
.musciListTitle{
  position: relative;
 height: 100rpx;
 font-weight: 700;
}
.musciListTitle text:nth-child(2){
  position: absolute;
  top: 0;
  right: 0;
  color: #666;
}
.musicDetail{
  position: relative;
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
}
.musicDetail text:nth-child(1){
  font-size: 28rpx;
  width: 20%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.musicDetail text:nth-child(2){
  width: 30%;
  padding-left: 10rpx;
  font-size: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.musicDetail text:nth-child(3){
  position: absolute;
  right: 0;
  color: #ccc;
}

/* 歌单的动态class */
.red{
  color: red !important;
}