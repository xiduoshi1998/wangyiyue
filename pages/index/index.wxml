<!--pages/index/index.wxml-->

<view class="indexContainer">
    <!-- 轮播图 -->
    <swiper class="banner" indicator-dots indicator-color='ivory' indicator-active-color='#d43c33' >
        <swiper-item wx:for="{{banner}}" wx:key='bannerId' class="bannerItem">
            <image src="{{item.pic}}"></image>
        </swiper-item>
    </swiper>

    <!-- 导航图标 -->
    <view class="navContainer">
    <view class="navItem" bindtap="pushRecommendSong">
    <text class="iconfont icon-biaoqiankuozhan_tuijian-399"></text>
    <text>每日推荐</text>
    </view>
    <view class="navItem" bindtap="musicPlaza">
    <text class="iconfont icon-gedan"></text>
    <text>歌单</text>
    </view>
    <view class="navItem" >
    <text class="iconfont icon-paihangbang"></text>
    <text >排行榜</text>
    </view>
    <view class="navItem">
    <text class="iconfont icon-diantai1"></text>
    <text>电台</text>
    </view>
    <view class="navItem" >
    <text class="iconfont icon-zhibo"></text>
    <text>直播</text>
    </view>
    </view>

    <!-- 推荐歌曲 -->
    <view class="recommendContainer">
      <NavHeader title='推荐歌曲' nav='为你精心推荐'></NavHeader>

       <!-- 内容区域 -->
       <scroll-view class="recommendScrol" enable-flex scroll-x>
       <view class="scroll" wx:for="{{recommendList}}" wx:key='id' bindtap="pushSonglist" id="{{item.id}}">
       <image src="{{item.picUrl}}"></image>
       <text>{{item.name}}</text>
       </view>
       
       </scroll-view>

    </view>
    
    <!-- 排行榜 -->
    <view class="topList">
    <!-- 头部 -->
    <NavHeader title='排行榜' nav='热歌风向标'></NavHeader>
    <!-- 主体 -->
 <swiper class="topListSwiper" next-margin="30rpx" previous-margin="30rpx">
    <swiper-item  wx:for="{{topList}}"  wx:key='name'>
 <view class="swiperItem" >
    <view class="title">{{item.name}}</view>
 <view class="musicItem" wx:for="{{item.tracks}}" wx:key='id' wx:for-item="musicItem2" bindtap="playTopList" id="{{musicItem2.id}}" data-index="{{index}}"  data-item="{{item.tracks}}" >
    <image src="{{musicItem2.al.picUrl}}"></image>
    <view class="musicName">
    <text>{{musicItem2.name}}</text>
    <text> - {{musicItem2.ar[0].name}}</text>
    </view>
 </view>
 </view>
 </swiper-item>
 </swiper>
    </view>
    
</view>