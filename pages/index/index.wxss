/* pages/index/index.wxss */
.indexContainer{
  background-color: rgb(245, 245, 245);
}
.banner{
  width: 100%;
  height: 300rpx;
  background-color: #fff;
}
.bannerItem{
display: flex;
align-items: center;
justify-content: center;
}
.banner image{
  width: 95%;
  height: 92%;
  border-radius:30rpx ;
}

/*导航栏图标  */
.navContainer{
margin-bottom:5rpx ;
  background-color: #fff;
  display: flex;
  background-color: #fff;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  margin:20rpx  0;
}
.navItem text{
  font-size: 26rpx;
}
.navItem .iconfont{
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #d43c33;
  border-radius: 50%;
  font-size: 50rpx;
  color: white;
}

/* 推荐歌曲 */

/* 推荐歌曲 内容区域 */
.recommendContainer{
  background-color: #fff;
  border-bottom-right-radius:20rpx;
  border-bottom-left-radius:20rpx;
}
.recommendScrol{
  display: flex;
  height: 300rpx;
  margin-top: 10rpx;
 
}
.scroll{
  width: 200rpx;
  margin-right: 20rpx;
}
.scroll:nth-child(1){
  padding-left: 20rpx;
}
.scroll:last-child{
  padding-right: 20rpx;
}
.scroll text{
  font-size: 24rpx;
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.scroll image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

/* 排行榜 */
.topList{
  margin-top: 10rpx;
  border-radius: 20rpx;
  background-color: #fff;
}
.topListSwiper{
  height: 500rpx;
  border-radius: 10rpx;
}
.topListSwiper .title{
  font-size: 30rpx;
  line-height: 80rpx;
}
.swiperItem{
  width: 96%;
}
.musicItem{
  display: flex;
  margin-bottom:20rpx ;
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius:10rpx ;
}
