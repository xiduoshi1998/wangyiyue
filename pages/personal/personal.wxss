/* pages/personal/personal.wxss */

.User{
  /* height: 100%; */
  background-color: rgb(245, 245, 245);
}
.centent{
  margin: 0 30rpx;
}

/* 登录或者用户 */
.register{
 display: flex;
 align-items: center;
}
.register image{
 width: 100rpx;
 height: 100rpx;
 line-height: 100rpx;
 text-align: center;
 border-radius: 50%;
 margin:20rpx;
 border: 4rpx solid #ffff;
}
.register text{
  line-height: 100rpx;
}

/* 用户模块 */
.userModule{
  display: flex;
  flex-wrap: wrap;
justify-content:space-between;
  /* height: 200rpx; */
  border-radius: 20rpx;
  background-color: #ffff;
}
.minModule{
  width: 110rpx;
  display: flex;
  flex-direction: column;
 align-items: center;
 padding: 20rpx;
 font-size: 24rpx;
}
.minModule text:nth-child(1){
  font-size: 40rpx;
  color: red;
}

/* 喜欢的音乐模块 */
.likeMusic{
  display: flex;
  align-items: center;
  margin-top:40rpx ;
  height: 150rpx;
  border-radius: 20rpx;
  background-color: #ffff;
}
.MusicData {
  display: flex;
  align-items: center;
margin: 20rpx;
}
.MusicData image{
  height: 100rpx;
  width: 100rpx;
  margin-right:20rpx ;
  border-radius: 20rpx;

}
.MusicData view{
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
}

/* 用户音乐列表 */




.tui-fixed-y{
  width: 100%;
  margin-top:0rpx ;
  margin-top: 20rpx;
  background-color: #ffff;
  border-radius: 20rpx;
  height: calc(100% - 80rpx);
}

.UserMusciList{
  margin-top: 20rpx;
  /* height: 500rpx; */
  border-radius: 20rpx;
  background-color: #ffff;
}
.musicListTitle{
  display: block;
  height: 50rpx;
  padding: 30rpx;
  padding-bottom: 0rpx;
  font-size: 26rpx;
}
.navItem{
  border-bottom:10rpx rgb(245, 245, 245) solid ;
}
.navItem:last-child{
  border: none;
}
